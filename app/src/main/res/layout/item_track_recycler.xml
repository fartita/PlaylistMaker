<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/margin_8">


    <ImageView
        android:id="@+id/imageTrack"
        android:layout_width="@dimen/margin_45"
        android:layout_height="@dimen/margin_45"
        android:layout_marginStart="@dimen/margin_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_track" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textSize_18"
        app:layout_constraintEnd_toStartOf="@+id/arrowButton"
        app:layout_constraintStart_toEndOf="@id/imageTrack"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/trackInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/textSize_12"
        app:layout_constraintEnd_toStartOf="@+id/arrowButton"
        app:layout_constraintStart_toEndOf="@+id/imageTrack"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/arrowButton"
        android:layout_width="@dimen/margin_28"
        android:layout_height="@dimen/margin_28"
        android:src="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>