<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/yp_black</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <item name="colorAccent">@color/switch_color</item>
        <item name="colorSurface">@color/switch_track_color</item>
        <item name="colorPrimaryFixed">@color/white</item>

    </style>

    <style name = "MainBackground">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name = "SecondBackground">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name = "SearchEdit">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name ="ButtonClear">
        <item name="tint">@color/black</item>
    </style>

    <style name = "ArrowTheme">
        <item name="android:src">@drawable/ic_arrow_back_white</item>
    </style>


    <style name="HeadStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name ="android:src">@drawable/ic_arrow_back_white</item>
    </style>

    <style name="AudioPlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AudioPlayerArtist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AudioPlayerContentName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AudioPlayerContentText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AudioPlayerImage">
        <item name="cornerRadius">@dimen/margin_8</item>
    </style>

    <style name="NavigationButtonStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="itemTextColor">@drawable/bottom_navigate_color</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="itemIconTint">@drawable/bottom_navigate_color</item>
        <item name="backgroundTint">@color/yp_black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="cornerRadius">@dimen/margin_9</item>
        <item name="iconGravity">textStart</item>
        <item name="android:drawablePadding">@dimen/margin_9</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <style name="create_button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowRadius">0</item>
    </style>
    <style name="inputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_blue</item>
        <item name="hintTextColor">@color/light_blue</item>
    </style>

</resources>