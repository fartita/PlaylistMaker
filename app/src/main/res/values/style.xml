<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonMenu"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name = "TitleApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name = "TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_40</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name = "ImageSettingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_20</item>
    </style>

    <style name="SearchButton">
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="SearchImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="SearchPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">86dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SearchTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/textSize_20</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>



</resources>