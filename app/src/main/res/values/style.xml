<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonMenu"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name = "TitleApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name = "TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_40</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name = "ImageSettingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_20</item>
    </style>

    <style name="SearchButton">
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="SearchImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="SearchPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">86dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="placeHolderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="placeHolderButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="SearchTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/textSize_20</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="PlaylistContent">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SecondContent">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="PlayListText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="PlayListNameStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayListInformationStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="playlistMenuStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>