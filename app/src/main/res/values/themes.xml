<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="colorSurface">@color/grey_back</item>


    </style>

    <style name = "MainBackground">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name = "SecondBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name = "SearchEdit">
        <item name="android:backgroundTint">@color/grey_back</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name ="ButtonClear">
        <item name="tint">@color/grey</item>
    </style>

    <style name = "ArrowTheme">
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>


    <style name="HeadStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="tint">@color/black</item>
        <item name ="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="AudioPlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AudioPlayerArtist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AudioPlayerContentName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:textColor">@color/grey</item>


    </style>

    <style name="AudioPlayerContentText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AudioPlayerImage">
        <item name="cornerRadius">@dimen/margin_8</item>
    </style>

</resources>